{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "ES2018",
		"sourceMap": true,
		"outDir": "./lib",
		"baseUrl": "./",
		"incremental": true,
		"esModuleInterop": true
	},
	"exclude": [
		"node_modules",
		"lib",
		"*/__tests__",
		"*/__mocks__",
		"showcase"
	]
}
